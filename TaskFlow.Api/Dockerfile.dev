# Development Dockerfile with debugging support
FROM mcr.microsoft.com/dotnet/sdk:9.0
WORKDIR /app
EXPOSE 8080
ENV ASPNETCORE_HTTP_PORTS=8080

# Copy project files and restore dependencies
COPY ["TaskFlow.Api.csproj", "./"]
RUN dotnet restore "TaskFlow.Api.csproj"

# Copy everything else
COPY . .

# Build for Debug configuration to /app/bin (standard output location)
RUN dotnet build "TaskFlow.Api.csproj" -c Debug -o /app/bin/Debug/net9.0

# The build outputs to /app/bin/Debug/net9.0 by default
WORKDIR /app/bin/Debug/net9.0
ENTRYPOINT ["dotnet", "TaskFlow.Api.dll"]
