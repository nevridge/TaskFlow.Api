# Development Dockerfile with debugging support
FROM mcr.microsoft.com/dotnet/sdk:9.0
WORKDIR /app
EXPOSE 8080
ENV ASPNETCORE_HTTP_PORTS=8080

# Copy project files and restore dependencies
COPY ["TaskFlow.Api.csproj", "./"]
RUN dotnet restore "TaskFlow.Api.csproj"

# Copy everything else
COPY . .

# Build for Debug configuration (for docker-compose)
RUN dotnet build "TaskFlow.Api.csproj" -c Debug -o /app/build

# Run the application
WORKDIR /app/build
ENTRYPOINT ["dotnet", "TaskFlow.Api.dll"]
